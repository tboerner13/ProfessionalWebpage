<%- include('partials/header') %>

  <h1 class="text-center text-4xl font-bold mb-6 text-[#071013]">Skills</h1>

  <div class="flex flex-wrap justify-center gap-6">
    <% skills.forEach(skill => { %>
      <div class="w-40 text-center p-4 border-3 border-[#071013] rounded-2xl shadow-[0_0_15px_#071013] bg-white transition-transform hover:scale-[1.01] duration-200 ease-in-out">
        <% if (skill.icon) { %>
          <img src="<%= skill.icon %>" alt="<%= skill.name %> icon" class="mx-auto mb-2 w-12 h-12 object-contain" />
        <% } %>
        <h2 class="font-bold text-lg text-[#071013]"><%= skill.name %></h2>
        <p class="text-sm text-gray-600"><%= skill.level %></p>
      </div>
    <% }) %>
  </div>

<%- include('partials/footer') %>
