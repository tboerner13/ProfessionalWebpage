<%- include('partials/header') %>

<h1 class="text-center text-4xl font-bold p-3">Contact Me</h1>

<% if (successMessage) { %>
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-green-100 text-green-800 border border-green-400 rounded-md p-4 mb-6">
        <%= successMessage %>
      </div>
    </div>
  <% } %>
  
  <% if (errorMessage) { %>
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-red-100 text-red-800 border border-red-400 rounded-md p-4 mb-6">
        <%= errorMessage %>
      </div>
    </div>
  <% } %>
  

<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="bg-white border-3 border-[#071013] rounded-2xl shadow-[0_0_15px_#071013] p-8 my-8">
    <h2 class="text-2xl font-semibold text-[#0B2545] mb-4">Get in Touch</h2>
    <ul class="text-[#4B5D67] space-y-2 text-lg">
      <li>Email: <a href="mailto:tjb0013@gmail.com" class="text-[#3B82F6] hover:underline">tjb0013@gmail.com</a></li>
      <li>LinkedIn: <a href="https://www.linkedin.com/in/tyler-boerner-1669b8294/" class="text-[#3B82F6] hover:underline" target="_blank">https://www.linkedin.com/in/tyler-boerner-1669b8294/</a></li>
      <li>GitHub: <a href="https://github.com/tboerner13" class="text-[#3B82F6] hover:underline" target="_blank">https://github.com/tboerner13</a></li>
    </ul>
  </div>

  <div class="bg-white border-3 border-[#071013] rounded-2xl shadow-[0_0_15px_#071013] p-8 my-8">
    <h2 class="text-2xl font-semibold text-[#0B2545] mb-4">Send a Message</h2>
    <form action="/contact" method="POST" class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="md:col-span-1">
        <label for="name" class="block text-[#344966] font-medium mb-1">Name</label>
        <input type="text" id="name" name="name" required class="w-full border border-gray-300 rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-[#3B82F6]">
      </div>
      <div class="md:col-span-1">
        <label for="email" class="block text-[#344966] font-medium mb-1">Email</label>
        <input type="email" id="email" name="email" required class="w-full border border-gray-300 rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-[#3B82F6]">
      </div>
      <div class="md:col-span-2">
        <label for="message" class="block text-[#344966] font-medium mb-1">Message</label>
        <textarea id="message" name="message" rows="6" required class="w-full border border-gray-300 rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-[#3B82F6]"></textarea>
      </div>
      <div class="md:col-span-2 text-right">
        <button type="submit" class="bg-[#0B2545] text-white px-6 py-3 rounded-lg hover:bg-[#13315C] transition">Send</button>
      </div>
    </form>
  </div>
</div>

<%- include('partials/footer') %>


